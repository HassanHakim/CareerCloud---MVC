@model IEnumerable<CareerCloud.Pocos.ApplicantJobApplicationPoco>

@{
    ViewBag.Title = "Job Applications";
}

<h2>Job Applications</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicantProfile.SecurityLogin.FullName)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.ApplicantProfile.Country)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.CompanyJob.CompanyJobDescriptions.FirstOrDefault(e => true).JobName)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CompanyJob.CompanyProfile.CompanyDescriptions.FirstOrDefault(e=>e.LanguageId=="EN").CompanyName)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.ApplicationDate)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.TimeStamp)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicantProfile.SecurityLogin.FullName)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.ApplicantProfile.Country)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.CompanyJob.CompanyJobDescriptions.FirstOrDefault(e => true).JobName)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.CompanyJob.CompanyProfile.CompanyDescriptions.FirstOrDefault(e => e.LanguageId == "EN").CompanyName)
        </td>*@
        <td>
           @* @Html.DisplayFor(modelItem => item.ApplicationDate)*@
             @item.ApplicationDate.ToString("MM/dd/yyyy")
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.TimeStamp)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
